{
  "$schema":     "../../node_modules/nx/schemas/project-schema.json",
  "name":        "cloud-functions",
  "projectType": "library",
  "sourceRoot":  "libs/cloud-functions/src",
  "tags":        [],
  "targets":     {
    "updateDependencies": {
      "executor": "@nx/linter:eslint",
      "outputs":  [
        "{options.outputFile}"
      ],
      "options":  {
        "lintFilePatterns": [
          "libs/cloud-functions/package.json"
        ],
        "fix":              true
      }
    },
    "lint":               {
      "dependsOn": [
        "updateDependencies"
      ],
      "executor":  "@nx/linter:eslint",
      "options":   {
        "lintFilePatterns": [
          "libs/cloud-functions/**/*.ts"
        ]
      },
      "outputs":   [
        "{options.outputFile}"
      ]
    },
    "build":              {
      "dependsOn": [
        "updateDependencies",
        "lint"
      ],
      "executor":  "@nx/esbuild:esbuild",
      "options":   {
        "assets":     [],
        "main":       "libs/cloud-functions/main.ts",
        "outputPath": "dist/libs/cloud-functions",
        "tsConfig":   "libs/cloud-functions/tsconfig.lib.json"
      },
      "outputs":   [
        "{options.outputPath}"
      ]
    },
    "deploy":             {
      "dependsOn": [
        "updateDependencies",
        "lint",
        "build"
      ],
      "executor":  "nx:run-commands",
      "options":   {
        "command": "firebase deploy --only functions"
      }
    }
  }
}
