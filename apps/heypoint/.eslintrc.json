{
  "extends":        [
    "../../.eslintrc.json"
  ],
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides":      [
    {
      "extends": [
        "plugin:@nx/angular",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      "files":   [
        "*.ts"
      ],
      "rules":   {
        "@angular-eslint/component-selector": [
          "error",
          {
            "prefix": "heypoint",
            "style":  "kebab-case",
            "type":   "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "heypoint",
            "style":  "camelCase",
            "type":   "attribute"
          }
        ]
      }
    }
  ]
}
